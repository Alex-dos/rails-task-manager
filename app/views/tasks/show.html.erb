<h1>Edit Task</h1>
<h2><%= @task.title %></h2>

<p>Details : <%= @task.details %></p>

<% if @task.completed == true %>
  Checked: <i class="far fa-check-square"></i>
<% else %>
  Checked: <i class="far fa-square"></i>
<%end%>
<ul>
<%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.label :completed %>
  <%= f.check_box :completed %>
  <%= f.submit %>
<% end %>

<p><%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
</p>


<p><%= link_to "Back to list", "/tasks"  %></p>
